<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/profileFragment">

        <ImageView
            android:layout_width="170dp"
            android:layout_height="170dp"
            app:srcCompat="@drawable/profile_stock"
            android:layout_marginTop="26dp"
            android:id="@+id/profileImage"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="@string/profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileImage"
            android:layout_alignStart="@+id/profileImage"
            android:layout_marginTop="43dp"
            android:id="@+id/profileName"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#212121"
            android:layout_alignEnd="@+id/profileImage" />

        <TextView
            android:text="@string/profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileName"
            android:layout_alignStart="@+id/profileName"
            android:layout_marginTop="14dp"
            android:id="@+id/profileNameLabel"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#727272"/>

        <TextView
            android:text="@string/profileLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileNameLabel"
            android:layout_alignStart="@+id/profileImage"
            android:layout_marginTop="25dp"
            android:id="@+id/profileLastName"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#212121"
            android:layout_alignEnd="@+id/profileImage" />

        <TextView
            android:text="@string/profileLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileLastName"
            android:layout_alignStart="@+id/profileLastName"
            android:layout_marginTop="14dp"
            android:id="@+id/profileLastNameLabel"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#727272"/>

        <TextView
            android:text="@string/profileEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileLastNameLabel"
            android:layout_alignStart="@+id/profileImage"
            android:layout_marginTop="25dp"
            android:id="@+id/profileEmail"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#212121"
            android:layout_alignEnd="@+id/profileImage" />

        <TextView
            android:text="@string/profileEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileEmail"
            android:layout_alignStart="@+id/profileLastName"
            android:layout_marginTop="14dp"
            android:id="@+id/profileEmailLabel"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#727272"/>

        <TextView
            android:text="@string/profileAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileEmailLabel"
            android:layout_alignStart="@+id/profileImage"
            android:layout_marginTop="25dp"
            android:id="@+id/profileAddress"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#212121"
            android:layout_alignEnd="@+id/profileImage" />

        <TextView
            android:text="@string/profileAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileAddress"
            android:layout_alignStart="@+id/profileLastName"
            android:layout_marginTop="14dp"
            android:id="@+id/profileAddressLabel"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#727272"/>

        <TextView
            android:text="@string/profilePhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileAddressLabel"
            android:layout_alignStart="@+id/profileImage"
            android:layout_marginTop="25dp"
            android:id="@+id/profilePhone"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#212121"
            android:layout_alignEnd="@+id/profileImage" />

        <TextView
            android:text="@string/profilePhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profilePhone"
            android:layout_alignStart="@+id/profileLastName"
            android:layout_marginTop="14dp"
            android:id="@+id/profilePhoneLabel"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#727272"
            android:layout_marginBottom="30dp"/>

        <Button
            android:text="@string/buttonChangeProfilePicture"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/profileName"
            android:layout_alignEnd="@+id/profileImage"
            android:id="@+id/btnChangePicture"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"/>

    </RelativeLayout>

</ScrollView>